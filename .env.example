# Example environment variables (DO NOT commit real secrets)
AMADEUS_CLIENT_ID=your_amadeus_client_id
AMADEUS_CLIENT_SECRET=your_amadeus_client_secret
AMADEUS_BASE_URL=https://test.api.amadeus.com
AFFILIATE_ID=your_affiliate_id
DOMAIN=yourdomain.com
PORT=8000
DB_PATH=farearound.db

# CORS allowlist (comma-separated)
# Dev default: http://localhost:4200
# Production example: https://farearound.com,https://www.farearound.com
ALLOW_ORIGINS=http://localhost:4200

# Optional: use PostgreSQL instead of SQLite
# Example: postgres://farearound_site1:YOUR_PASSWORD@127.0.0.1:5432/farearound_site1
DATABASE_URL=

# Optional SMTP (required only to send alert emails)
EMAIL_HOST=
EMAIL_PORT=
EMAIL_USER=
EMAIL_PASSWORD=
EMAIL_FROM_NAME=FareAround Alerts
